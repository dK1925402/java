
class Main {
    
    //method
    static int factorial(int n){
        
      if ( n == 1|| n==0){
          return 1;
      }
      
      else {
          return n * factorial(n-1);// recursion 
      }
      
    }
    
    
    public static void main(String[] args) {
        
        // declare variable 
        int n = 5;
        //output 
        System.out.println("the factorial of "+n+ " is : "+factorial(n));
        
    }
}
